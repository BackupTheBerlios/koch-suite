  <!--
    function eintragen ( name ) {
      <? if ($maxsel != 1) { ?>
      if ( opener.document.forms[0].<? echo $target ?>.value == '' ) {
        opener.document.forms[0].<? echo $target ?>.value = name;
      } else {
        opener.document.forms[0].<? echo $target ?>.value += ', ' + name;
      }
      <? } else { ?>
      opener.document.forms[0].<? echo $target ?>.value = name;
      window.close();
      <? } ?>
    }
  //-->
