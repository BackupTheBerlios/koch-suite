  /**
   * Creates tables for MySQL DBMS
   *
   */
  function create_tables_mysql() {
    $sql = "
	CREATE TABLE ANWEISUNG (
	  TEXT longtext,
	  MENUE_ID int(11) NOT NULL default '0',
	  KEY MENUE_ID (MENUE_ID)
	)";
    exec_or_die($sql);

    $sql = "
	CREATE TABLE EINHEITEN (
