# Space-separated list of all "raw" php-files.
PHP_FILES=		index rezept print mmprint infos einfuegen kategorien
INC_FILES=		menue such

# Files to install unmangled (dont forget the filename-suffix here!)
ADDITIONAL=		styles.css
SUBDIRS=		pics

all:
	@make subdir TRGT=all
	@(for i in ${PHP_FILES}; do\
	echo "$$i.raw --> $$i.php"; \
	cat $$i.raw | sed -f ${CONF_FILE} > $$i.php;\
	done)
	@(for i in ${INC_FILES}; do \
	echo "$${i}.raw --> $${i}.inc"; \
	cat $${i}.raw | sed -f ${CONF_FILE} > $${i}.inc ;\
	done)

subdir:
	@(for i in ${SUBDIRS} ; do\
	echo "====> ${THISDIR}/$${i}";\
	cd $$i; \
	${MAKE} ${TRGT} CONF_FILE=${CONF_FILE} THISDIR=${THISDIR}/$$i; \
	echo "<==== ${THISDIR}/$${i}";\
	cd ..; \
	done )

clean:
	@make subdir TRGT=clean
	-rm -rf *.php
	-rm -rf *.inc

distclean:
	@make subdir TRGT=distclean
	@( for i in ${SUBDIRS}; do \
	echo "rm $${i}/Makefile" ; \
	rm $${i}/Makefile; \
	done)

install:
	@make subdir TRGT=install
	@( test -d "<%%WEB_PREFIX%%>" || \
	install -d -g <%%GROUP%%> -m 0755 -o <%%OWNER%%> <%%WEB_PREFIX%%> )
	@( for i in ${PHP_FILES} ; do \
	install -c -g <%%GROUP%%> -m 0644 -o <%%OWNER%%> $${i}.php <%%WEB_PREFIX%%>; \
	echo "install -c -g <%%GROUP%%> -m 0644 -o <%%OWNER%%> $${i}.php <%%WEB_PREFIX%%>" ; \
	done )
	@echo "Teil 2:"
	@(for i in ${INC_FILES} ; do \
	install -c -g <%%GROUP%%> -m 0644 -o <%%OWNER%%> $${i}.inc <%%WEB_PREFIX%%> ; \
	echo "install -c -g <%%GROUP%%> -m 0644 -o <%%OWNER%%> $${i}.inc <%%WEB_PREFIX%%>" ; \
	done)
	@( for i in ${ADDITIONAL} ; do \
	install -c -g <%%GROUP%%> -m 0644 -o <%%OWNER%%> $${i} <%%WEB_PREFIX%%> ; \
	echo "install -c -g <%%GROUP%%> -m 0644 -o <%%OWNER%%> $${i} <%%WEB_PREFIX%%>" ; \
	done )
