  require_once "<%%PHP_LIBS%%>/setup.inc";
  include "<%%PHP_LIBS%%>/lang.inc";
  include "<%%PHP_LIBS%%>/functions.inc";
  include "<%%PHP_LIBS%%>/auth.inc";

  auth(READ);

  session_register("searchresult");    // Cache search recipes
  session_register("tagged_recipes");  // Enable "tagging" pages for
                                       // further operations
  session_register("operate_on");      // Set marker an which buffer we
                                       // are working.
  $searchresult   =& $_SESSION['searchresult'];
  $tagged_recipes =& $_SESSION['tagged_recipes'];

  $bulk = false;

  if (isset($_GET["mid"])) {
    $mid = $_GET["mid"];
    if (is_numeric($mid)) {
      $ok = true;
    } else {
      $error = "Illegal value for mid";
      $ok = false;
    }
  } elseif (isset($_GET["result_id"])) {
    $result_id = $_GET["result_id"];
    while (($result_id+1) > count($_SESSION['searchresult']))
      $result_id--;
    if (is_numeric($result_id)) {
      $mid = $_SESSION["searchresult"][$result_id]["id"];
      $ok = true;
    } else {
      $error = "Illegal value for result_id";
      $ok = false;
    }
  } elseif (isset($_SESSION['operate_on'])) {
    $bulk = true;
  } else {
    /* Sorry, wrong parameters. */
    $error = "Wrong parameter list.";
    $ok = false;
  }

  if (isset($_GET["scale"])) {
    $scale = $_GET["scale"];
    if (! is_numeric($scale))
      $error = "scale: illegal value";
  } else {
    $scale = 1;
  }
?>

