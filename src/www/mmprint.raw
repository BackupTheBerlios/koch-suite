<?
  if (isset($error)) 
    echo $error;
  else {
    if ($bulk) {
      foreach($_SESSION[$_SESSION['operate_on']] as $result) {
        echo htmlentities(mmexport(get_menu_by_mid($result['id'], 1)));
      }
    } else {
      echo htmlentities(mmexport(get_menu_by_mid($mid, $scale)));
    }
  }
?>
