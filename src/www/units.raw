<?
  $units = get_units();

  function td ($str) {
    if ($str != "") {
      return "<td style=\"background-color:#e9e9f0;\">" . $str . "</td>";
    } else {
      return "<td style=\"background-color:#e9e9f0;\">&nbsp;</td>";
    }
  }

  function th ($str) {
    return "<td style=\"background-color:#c0c0d5; font-family:Helvetica,Arial;\">" . $str . "</td>";
  }

  echo "<tr>" .
	 th("MM") .
	 th("RK") .
         th($Lang['Text']) . 
	 th($Lang['Description']) . 
	 th($Lang['Alias']) . 
	 "</tr>\n";

  foreach ($units as $u) {
    $vals = $u["unit"];
    $aliases = $u["aliases"];

    echo "<tr>" . 
	   td($vals["ABBREV"]) .
	   td($vals["RK_ABBREV"]) .
	   td($vals["TEXT"]) . 
	   td($vals["DESCR"]) . 
	   td(implode($aliases, " ")) .
	   "</tr>\n";
  }

?>
      </table>
    </td>
  </tr>
</table>
