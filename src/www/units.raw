  $units = get_units();

  function td ($str) {
    if ($str != "") {
      return "<td class=\"menu\">" . $str . "</td>";
    } else {
      return "<td class=\"menu\">&nbsp;</td>";
    }
  }

  function th ($str) {
    return "<td style=\"background-color:#c0c0d5\">" . $str . "</td>";
  }

  function edit_alias ($unit) {
    /* Create a link to the alias-editor for $unit */

    global $Lang;

    return "<span class=\"small\">[<a href=\"edit_alias.php?unit=$unit\">" . $Lang['Edit'] . "</a>]</span>";
  }


  echo "<tr>" .
	 th("MM") .
	 th("RK") .
         th($Lang['Text']) . 
	 // th($Lang['Description']) . 
	 th($Lang['Alias']) . 
       "</tr>\n";

  foreach ($units as $u) {
    $vals = $u["unit"];
    $aliases = $u["aliases"];

    echo "<tr>" . 
	   td(htmlentities($vals["abbrev"])) .
	   td(htmlentities($vals["rk_abbrev"])) .
	   td(htmlentities($vals["text"])) . 
	   // td($vals["descr"]) . 
	   td(htmlentities(implode($aliases, " ")) . " " .edit_alias(htmlentities($vals["abbrev"]))) .
         "</tr>\n";
  }

