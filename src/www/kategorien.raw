  <?php
    $kat = get_categories();

    foreach ($kat as $kategorie) {
      if ($maxsel == 1) {
        echo "<tr><td><a href=\"search.php?suchen=1&target=$target&begriff=$kategorie\" onClick=\"eintragen('" . $kategorie . "');\">$kategorie</a></td></tr>\n";
      } else {
        echo "<tr><td><a name=\"$kategorie\" href=\"$PHP_SELF?target=$target#$kategorie\" onClick=\"eintragen('" . $kategorie . "');\">$kategorie</a></td></tr>\n";
      }
    }
  ?>

