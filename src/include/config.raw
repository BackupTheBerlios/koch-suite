  /*
   * Include PEARs Database abstraction-layer
   */

  require_once 'DB.php';
  require_once '<%%PHP_LIBS%%>/debug.inc';

  $DB_DSN      = array('phptype'  => "<%%DB_TYPE%%>",
                       'dbsyntax' => false,
                       'protocol' => false,
                       'hostspec' => "<%%DB_SERVER%%>",
                       'database' => "<%%DB_NAME%%>",
                       'username' => "<%%DB_USER%%>",
                       'password' => "<%%DB_PASSWORD%%>" );

  /*
   * Define some constants.
   */

  define("DB_MYSQL", ($DB_DSN["phptype"] == "mysql") ? true : false);
  define("DEBUG_FILE", "/tmp/koch-suite-debug");
  define("DEFAULT_LANG", "de");

  $kochsuite     = "<i>Koch-Suite</i>";
  $kochsuite_ver = "0.5-pre6";

  /*
   * Connect to the database
   */

  write_log("Connecting to " . serialize($DB_DSN));
  $db=DB::connect($DB_DSN);

  if (DB::isError($db)) {
    write_log("Can't connect to $DB_DSN: " . $db->getMessage());
    die("Can't connect to $DB_DSN: " . $db->getMessage());
  }

  /* Return associative arrays */
  $db->setFetchMode(DB_FETCHMODE_ASSOC);
?>
