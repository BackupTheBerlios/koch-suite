  include "<%%PHP_LIBS%%>/debug.inc";

  $DB_SERVER   = "<%%DB_SERVER%%>";
  $DB_USER     = "<%%DB_USER%%>";
  $DB_PASSWORD = "<%%DB_PASSWORD%%>";
  $DB_NAME     = "<%%DB_NAME%%>";

  $DEBUG_FILE  = "/tmp/koch-suite-debug";

  $DEFAULT_LANG = "de";

  $kochsuite_ver = "0.5-pre1";

  /* Connect to the Database */
  if (get_cfg_var(mysql.allow_persistent) == 1) {
    if (! $link = @mysql_pconnect("$DB_SERVER", "$DB_USER", "$DB_PASSWORD")) {
      write_log("Can't connect to the MySQL-Server:");
      write_log(mysql_error());
    }
  } else {
    if (! $link = @mysql_connect("$DB_SERVER", "$DB_USER", "$DB_PASSWORD")) {
      write_log("Can't connect to the MySQL-Server (Link = $link): ");
      write_log(mysql_error());
    }
  }
?>
