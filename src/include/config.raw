  require_once 'DB.php';

  include "<%%PHP_LIBS%%>/debug.inc";

  // $DB_DSN      = "<%%DB_DSN%%>";
  $DB_DSN      = array('phptype'  => "<%%DB_TYPE%%>",
                       'dbsyntax' => false,
                       'protocol' => false,
                       'hostspec' => "<%%DB_SERVER%%>",
                       'database' => "<%%DB_NAME%%>",
                       'username' => "<%%DB_USER%%>",
                       'password' => "<%%DB_PASSWORD%%>" );

  $DEBUG_FILE  = "/tmp/koch-suite-debug";

  $DEFAULT_LANG = "de";

  $kochsuite     = "<i>Koch-Suite</i>";
  $kochsuite_ver = "0.5-pre6";

  write_log("Connecting to $DB_DSN");
  $db=DB::connect($DB_DSN);

  if (DB::isError($db)) {
    write_log("Can't connect to $DB_DSN: " . $db->getMessage());
    die("Can't connect to $DB_DSN: " . $db->getMessage());
  }

  /* Return associative arrays */
  $db->setFetchMode(DB_FETCHMODE_ASSOC);
