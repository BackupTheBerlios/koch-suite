          $all = "";
        }
        $r = get_mid_by_name("$all%");
      }
      print_titles($r);

    } else if ($where == 'ingred') {
      if (($m = get_mid_by_ingred($begriff)) != 0) {
        print_titles($m);
      }
    } else if ($where == 'cat') {
      if ($m = get_mid_by_cat($begriff)) {
