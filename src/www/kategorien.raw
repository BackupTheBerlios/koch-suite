    function eintragen ( name ) {
      <? if ($maxsel != 1) { ?>
      if ( opener.document.<?php echo $formname ?>.<? echo $target ?>.value == '' ) {
        opener.document.<?php echo $formname ?>.<? echo $target ?>.value = name;
      } else {
        opener.document.<?php echo $formname ?>.<? echo $target ?>.value += ', ' + name;
      }
      <? } else { ?>
